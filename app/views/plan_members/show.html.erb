<div class="container-fluid">
  <div class="row-fluid">
    <% @planMembers.each.with_index do |pm,index| %>
        <div class="span4">
          <div class="well well-small">
            <img src="<%= pm.user.avatar.url %>" style="width:60px; float:left;" class="thumbnail">
            <div style="margin-left:80px; height:70px;">
              <% if @plan.user_id == current_user.id %>
                  <%= link_to content_tag(:i, "", class: "icon-remove pull-right"), plan_member_path(pm), method: :delete %>
              <% end %>
              <div style="font-weight: bold; color: #3B5998;"><%= pm.user.name %></div>
              <div style="margin-top:15px;"><%= pm.user.email %></div>
              <div style="color:gray;"><%= pm.created_at %></div>
            </div>
          </div>
        </div>

        <% if((index+1)%3==0&&index!=0&&@planMembers.size!=(index+1)) %>
            </div>
            <div class="row-fluid">
        <% end %>

    <% end %>
    </div>

    <%= link_to "뒤로", :back, class: "btn btn-primary", style: "color:white;" %>
    </div>