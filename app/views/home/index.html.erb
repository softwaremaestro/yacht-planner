<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well well-small">
        왼쪽
      </div>
    </div>
    <div class="span9">
      <div class="well well-small">
        <legend style="font-weight: bold;">NEWSFEED</legend>
        <div id="feed-list">

          <% @newsfeeds.each do |nf| %>

          <div style="border-bottom: 1px solid #ddd; padding:10px;">
            <img src="<%= current_user.avatar.url %>" style="width:50px; float:left;" class="thumbnail">
            <div style="margin-left:70px;">
              <div>
                <span style="color:#3B5998; font-weight: bold;"><%= nf.user.name %></span>
                #
                <span style="color:brown; font-weight:bold"><%= nf.plan.title %></span>
                <span style="color:gray">>> <%= nf.sub_category.title %></span>
              </div>
              <div>
                <%= nf.created_at %>
              </div>
              <div style="margin-top:5px;">
                <%= nf.article.content %>
                <%= nf.article.comments %>

              </div>

            </div>
          </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>