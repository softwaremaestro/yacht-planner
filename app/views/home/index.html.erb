<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well well-small">
        왼쪽
      </div>
    </div>
    <div class="span9">
      <div class="well well-small">
        <legend style="font-weight: bold;">NEWSFEED</legend>
        <div id="feed-list">

          <% @newsfeeds.each do |nf| %>

          <div style="border-bottom: 1px solid #ddd; padding:10px;">
            <img src="<%= current_user.avatar.url %>" style="width:50px; float:left;" class="thumbnail">
            <div style="margin-left:70px;">
              <div>
                <span style="color:#3B5998; font-weight: bold;"><%= nf.user.name %></span>
                #
                <span style="color:brown; font-weight:bold"><%= nf.plan.title %></span>
                <span style="color:gray">>> <%= nf.sub_category.try(:title) || "guest" %></span>
              </div>
              <div>
                <%= nf.created_at %>
              </div>
              <div style="margin-top:5px;">
                <%= nf.article.content %>

                <div id="comment_list_<%= dom_id(nf.article)%>" style="margin-top:10px;">
                  <% nf.article.comments.each do |c| %>

<!--                  <div id="comment_1" style="min-height: 50px;;">
                    <img src="<%= c.user.avatar.url %>" class="thumbnail" style="width:40px; float:left;">
                    <div style="margin-left:60px;">
                      <div><span style="color:#3B5998; font-weight: bold;"><%= c.user.name %></span></div>
                      <pre style="margin-top:5px;"><%= c.content %></pre>
                    </div>
                  </div>-->
                      <%= render 'comments/comment', :c => c %>
                  <% end %>
                </div>

                <!--<div id="comment_form">
                  <img src="<%= current_user.avatar.url %>" class="thumbnail" style="width:40px; float:left;">
                  <div style="margin-left:60px; min-height: 50px;">
                    <div style="margin-bottom: 5px;"><span style="color:#3B5998; font-weight: bold;"><%= current_user.name %></span></div>
                    <textarea rows="1" placeholder="댓글을 써 보세요.." style=""></textarea>
                    <input type="button" value="전송" class="btn">
                  </div>
                </div>
                -->
                <%= render 'comments/comment_form' ,:a => nf.article %>


              </div>

            </div>
          </div>

          <% end %>
          <div style="text-align: center;">
            <%= paginate @newsfeeds, :theme => 'twitter-bootstrap' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>