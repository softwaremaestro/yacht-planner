<div class="row">
  <div class="span6">
    <%= render 'plans/form' %>
  </div>
  <div class="span6">
    <legend style="font-weight: bold;">
      가입 신청 관리
    </legend>
    <table style="width:100%;" class="table">
      <thead>
      <tr>
        <th style="width:60px;"></th>
        <th></th>
        <th style="width:110px;"></th>
      </tr>
      </thead>
      <tbody>

      <% @planInvitations.each do |p| %>
          <tr id="<%= dom_id(p) %>">
            <td>
              <img src="<%= p.user.avatar.url %>"
                   style="width:50px" class="thumbnail">
            </td>
            <td>
              <div style="padding-left:10px;">
                <div style="color: #3B5998; font-weight: bold;"><%= p.user.name %></div>
                <div><%= p.user.email %></div>
                <div><%= p.created_at %></div>
              </div>
            </td>
            <td>
              <div style="height:100%;">
                <%= render "plans/member_form" , plan_id: p.plan_id, user_id: p.user_id %>

                <%= link_to "거절", plan_invitation_path(p), class: "btn btn-danonfirm: "이 글을 삭제 하시겠습니까?", method: :delete, remote: true %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>