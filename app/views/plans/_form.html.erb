<%= simple_form_for(@plan, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, :input_html => {:class => "input-xxlarge"} %>
  <%= f.input :public %>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>