<%= simple_form_for(@plan, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.input :title, :collection => ["1", "2", "3"], :as => :radio_buttons %>
  <%= f.input :description, :input_html => {:class => "input-xlarge"} %>
  <%= f.input :public %>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>